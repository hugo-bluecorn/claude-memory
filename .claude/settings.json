{
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"$CLAUDE_PROJECT_DIR/.claude/hooks/on-pre-compact.sh\"'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"$CLAUDE_PROJECT_DIR/.claude/hooks/on-session-start.sh\"'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"$CLAUDE_PROJECT_DIR/.claude/hooks/on-session-end.sh\"'"
          }
        ]
      }
    ]
  }
}
